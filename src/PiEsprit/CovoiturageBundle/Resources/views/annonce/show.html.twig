{% extends '@PiEspritCovoiturage/Covoiturage/Layout.html.twig' %}
{% block content %}
{% block body %}
    <h1>Annonce</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ annonce.depart }}</td>
            </tr>
            <tr>
                <th>Arrivee</th>
                <td>{{ annonce.arrivee }}</td>
            </tr>
            <tr>
                <th>Heuredepart</th>
                <td>{{ annonce.heuredepart }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if annonce.date %}{{ annonce.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nbplaces</th>
                <td>{{ annonce.nbplaces }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if annonce.disponible %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Bagages</th>
                <td>{% if annonce.bagages %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Animal</th>
                <td>{% if annonce.animal %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fumer</th>
                <td>{% if annonce.fumer %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Annonce_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('Annonce_edit', { 'id': annonce.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
{% endblock content %}
